{
  "main": "src/web/index.js",
  "scripts": {
    "start": "NODE_PATH=src node-dev --use_strict --inspect -r ./loadEnv.js ./src/web/index.js | pino-pretty",
    "test": "NODE_PATH=src node -r ./loadEnv.js node_modules/.bin/tap --strict",
    "db": "node -r ./loadEnv.js node_modules/.bin/knex --knexfile knexfile.js",
    "lint": "npx eslint src",
    "release": "standard-version"
  },
  "engines": {
    "node": "15.12.0",
    "npm": "7.x.x"
  },
  "dependencies": {
    "fastify": "^3.14.0",
    "fastify-autoload": "^3.6.0",
    "fastify-cookie": "^5.3.0",
    "fastify-cors": "^5.2.0",
    "fastify-formbody": "^5.0.0",
    "fastify-helmet": "^5.3.1",
    "fastify-jwt": "^2.4.0",
    "fastify-no-icon": "^4.0.0",
    "fastify-plugin": "^3.0.0",
    "fastify-request-context": "^2.1.3",
    "fastify-static": "^4.0.1",
    "knex": "^0.21.19",
    "lodash": "^4.17.21",
    "objection": "^2.2.15",
    "point-of-view": "^4.14.0",
    "pug": "^3.0.2",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "documentation": "^13.2.0",
    "eslint": "^7.22.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-sort-requires": "^2.1.0",
    "faker": "^5.4.0",
    "node-dev": "^6.6.0",
    "pino-pretty": "^4.7.1",
    "standard-version": "^9.1.1",
    "tap": "^14.11.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "standard"
    ],
    "parserOptions": {
      "ecmaVersion": 12
    },
    "plugins": [
      "sort-requires"
    ],
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "object-property-newline": [
        "error",
        {
          "allowAllPropertiesOnSameLine": false
        }
      ],
      "arrow-parens": [
        "warn",
        "always"
      ],
      "sort-requires/sort-requires": 2,
      "max-len": [
        "warn",
        {
          "code": 98
        }
      ]
    }
  },
  "tap": {
    "nyc-arg": [
      "--exclude=test/*.js",
      "--exclude=migrations/*.js"
    ],
    "before": "test/before.js",
    "reporter": "list",
    "esm": false
  }
}
